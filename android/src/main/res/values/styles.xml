<resources>
    <style name="BaseTheme" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">#FF0F0F0F</item>
        <item name="android:colorPrimary">#FFFFFFFF</item>
        <item name="android:colorPrimaryDark">#FF333333</item>
        <item name="android:colorAccent">#FF259024</item>
        <item name="android:textColor">#FF050505</item>
    </style>
    <style name="AppTheme" parent="BaseTheme">
        <item name="android:windowBackground">@drawable/main_background</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <style name="BaseTheme.Toolbar" parent="Widget.AppCompat.Light.ActionBar.Solid">
    		
    </style>
    <style name="AppTheme.Toolbar" parent="BaseTheme.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
    </style>
    
    <style name="BaseTheme.Toolbar.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
    		
    </style>
    <style name="AppTheme.Toolbar.Title" parent="BaseTheme.Toolbar.Title">
        <item name="android:textColor">?attr/textColorPrimary</item>
    </style>

    <style name="AppTheme.SeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressDrawable">@drawable/seekbar_progress_style</item>
        <item name="android:thumb">@drawable/seekbar_thumb</item>
        <item name="android:splitTrack">false</item>
    </style>
    

</resources>
