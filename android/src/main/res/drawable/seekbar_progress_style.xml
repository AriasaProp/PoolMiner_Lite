<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/secondaryProgress">
        <shape>
            <corners android:radius="2dp" />
            <gradient
                android:angle="270"
                android:centerY="0.5"
                android:endColor="@color/oposite"
                android:centerColor="@color/oposite"
                android:startColor="@color/opositeTransparent"
                android:type="linear" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle" >
                <size android:height="2dp" />
                <corners android:radius="2dp" />
                <solid android:color="@color/opositeTransparent" />
            </shape>
        </clip>
    </item>
</layer-list>